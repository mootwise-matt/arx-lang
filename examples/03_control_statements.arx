// ARX Control Statements Example
// Demonstrates: FOR loops, comparison operators, logical operators
module ControlStatementsDemo;

class App
  procedure Main
  begin
    system.writeln('=== ARX Control Statements Demo ===');
    system.writeln('');
    
    // FOR Loop demonstration
    system.writeln('=== FOR Loop Example ===');
    system.writeln('Counting from 1 to 5:');
    
    for i = 1 to 5 do
    begin
      system.writeln('Loop iteration: ' + i);
    end;
    
    system.writeln('');
    
    // FOR Loop with arithmetic
    system.writeln('=== FOR Loop with Arithmetic ===');
    system.writeln('Calculating squares from 1 to 4:');
    
    for num = 1 to 4 do
    begin
      integer square;
      square = num * num;
      system.writeln('Square of ' + num + ' = ' + square);
    end;
    
    system.writeln('');
    
    // Comparison operators
    system.writeln('=== Comparison Operators ===');
    integer x;
    integer y;
    x = 10;
    y = 20;
    
    system.writeln('x = ' + x + ', y = ' + y);
    system.writeln('Comparison expressions:');
    system.writeln('x == y would be: ' + x + ' == ' + y);
    system.writeln('x != y would be: ' + x + ' != ' + y);
    system.writeln('x < y would be: ' + x + ' < ' + y);
    system.writeln('x > y would be: ' + x + ' > ' + y);
    system.writeln('x <= y would be: ' + x + ' <= ' + y);
    system.writeln('x >= y would be: ' + x + ' >= ' + y);
    
    system.writeln('');
    
    // Logical operators (boolean literals not yet implemented)
    system.writeln('=== Logical Operators ===');
    system.writeln('Note: Boolean literals (true/false) are planned but not yet implemented');
    system.writeln('Logical operators (and, or, not) will work with boolean expressions');
    
    system.writeln('');
    
    // Arithmetic expressions for control flow
    system.writeln('=== Arithmetic for Control Flow ===');
    integer counter;
    counter = 1;
    system.writeln('Counter starts at: ' + counter);
    
    counter = counter + 1;
    system.writeln('Counter after increment: ' + counter);
    
    counter = counter * 2;
    system.writeln('Counter after doubling: ' + counter);
    
  system.writeln('');
  
  // WHILE Loop demonstration
  system.writeln('=== WHILE Loop Example ===');
  system.writeln('Basic WHILE loop (runs once):');
  
  integer while_counter;
  while_counter = 1;
  
  while while_counter do
  begin
    system.writeln('WHILE loop iteration: ' + while_counter);
    while_counter = 0;  // Exit condition
  end;
  
           system.writeln('');
           
           // IF Statement demonstration
           system.writeln('=== IF Statement Example ===');
           system.writeln('Basic IF statement:');
           
           integer test_value;
           test_value = 1;
           
           if test_value then
           begin
             system.writeln('IF condition is true (value = 1)');
           end;
           
           system.writeln('');
           system.writeln('IF with ELSE:');
           
           test_value = 0;
           if test_value then
           begin
             system.writeln('This should not print');
           else
             system.writeln('ELSE condition executed (value = 0)');
           end;
           
           system.writeln('');
           system.writeln('IF with ELSEIF and ELSE:');
           
           test_value = 2;
           if test_value == 1 then
           begin
             system.writeln('IF condition encountered');
           elseif test_value == 2 then
             system.writeln('ELSEIF condition encountered');
           else
             system.writeln('ELSE condition encountered');
           end;
           
           system.writeln('');
           system.writeln('IF with Relational Operators:');
           
           integer score;
           score = 85;
           
           if score >= 90 then
           begin
             system.writeln('Grade: A (score >= 90)');
           elseif score >= 80 then
             system.writeln('Grade: B (score >= 80)');
           elseif score >= 70 then
             system.writeln('Grade: C (score >= 70)');
           elseif score >= 60 then
             system.writeln('Grade: D (score >= 60)');
           else
             system.writeln('Grade: F (score < 60)');
           end;
           
           system.writeln('');
           system.writeln('=== Control Statements Demo Complete ===');
           system.writeln('FOR loops are fully working! Both loop termination and body execution are working correctly.');
           system.writeln('WHILE loops are working for basic conditions (variables, literals).');
           system.writeln('IF statements are fully working! IF, ELSEIF, and ELSE clauses all execute correctly.');
           system.writeln('Comparison operators (<, <=, >, >=) are now fully implemented!');
  end;
end;
