module LogicalOperators;

class App
  procedure Main
  begin
    system.writeln('=== ARX Logical Operators Demo ===');
    system.writeln('');
    
    // Test variables
    integer a;
    integer b;
    integer c;
    integer result;
    
    a = 5;
    b = 10;
    c = 0;
    
    system.writeln('Variables: a = ' + a + ', b = ' + b + ', c = ' + c);
    system.writeln('');
    
    // Test Logical AND (&&)
    system.writeln('=== Logical AND (&&) Tests ===');
    
    result = a > 0 && b > 0;
    system.writeln('a > 0 && b > 0 = ' + result + ' (should be 1)');
    
    result = a > 0 && c > 0;
    system.writeln('a > 0 && c > 0 = ' + result + ' (should be 0)');
    
    result = a > 10 && b > 5;
    system.writeln('a > 10 && b > 5 = ' + result + ' (should be 0)');
    
    result = a == 5 && b == 10;
    system.writeln('a == 5 && b == 10 = ' + result + ' (should be 1)');
    
    system.writeln('');
    
    // Test Logical OR (||)
    system.writeln('=== Logical OR (||) Tests ===');
    
    result = a > 0 || c > 0;
    system.writeln('a > 0 || c > 0 = ' + result + ' (should be 1)');
    
    result = a > 10 || b > 5;
    system.writeln('a > 10 || b > 5 = ' + result + ' (should be 1)');
    
    result = a > 10 || c > 0;
    system.writeln('a > 10 || c > 0 = ' + result + ' (should be 0)');
    
    result = a == 5 || b == 5;
    system.writeln('a == 5 || b == 5 = ' + result + ' (should be 1)');
    
    system.writeln('');
    
    // Test Logical NOT (!)
    system.writeln('=== Logical NOT (!) Tests ===');
    
    result = !(a > 0);
    system.writeln('!(a > 0) = ' + result + ' (should be 0)');
    
    result = !(c > 0);
    system.writeln('!(c > 0) = ' + result + ' (should be 1)');
    
    result = !(a > 10);
    system.writeln('!(a > 10) = ' + result + ' (should be 1)');
    
    result = !(a == 5);
    system.writeln('!(a == 5) = ' + result + ' (should be 0)');
    
    system.writeln('');
    
    // Test Complex Logical Expressions
    system.writeln('=== Complex Logical Expressions ===');
    
    result = (a > 0 && b > 0) || (c > 0);
    system.writeln('(a > 0 && b > 0) || (c > 0) = ' + result + ' (should be 1)');
    
    result = (a > 10) || (b > 5 && c > 0);
    system.writeln('(a > 10) || (b > 5 && c > 0) = ' + result + ' (should be 1)');
    
    result = !(a > 0 && b > 0);
    system.writeln('!(a > 0 && b > 0) = ' + result + ' (should be 0)');
    
    result = !(a > 10) && !(c > 0);
    system.writeln('!(a > 10) && !(c > 0) = ' + result + ' (should be 1)');
    
    system.writeln('');
    system.writeln('=== Logical Operators Demo Complete ===');
  end;
end;
